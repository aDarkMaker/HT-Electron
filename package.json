{
    "name": "HXKT",
    "version": "1.0.0",
    "description": "HXK Terminal - 统一管理工作资料与任务的跨平台协作工具",
    "main": "src/main.js",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --development",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "test": "echo \"Error: no test specified\" && exit 1",
        "spellcheck": "cspell 'src/**/*.{ts,js,html}' -c .cspell.json",
        "prepare": "husky install"
    },
    "keywords": [
        "electron",
        "task-management",
        "collaboration"
    ],
    "author": "HXK Team",
    "license": "MIT",
    "packageManager": "pnpm@10.19.0",
    "devDependencies": {
        "@electron-forge/cli": "^7.10.2",
        "cspell": "^9.2.1",
        "electron": "^38.3.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.38.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.5",
        "prettier": "3.6.2"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.14.0",
        "@grpc/proto-loader": "^0.8.0",
        "electron-store": "^10.0.0",
        "eslint-plugin-jsdoc": "^61.1.5",
        "jsdoc": "^4.0.5"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    },
    "build": {
        "appId": "com.hxk.terminal",
        "productName": "HXK Terminal",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "assets/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}

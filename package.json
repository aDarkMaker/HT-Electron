{
    "name": "HXKT",
    "version": "1.0.0",
    "description": "HXK Terminal - 统一管理工作资料与任务的跨平台协作工具",
    "main": "src/main.js",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --development",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "test": "echo \"Error: no test specified\" && exit 1",
        "spellcheck": "cspell 'src/**/*.{ts,js,html}' -c .cspell.json",
        "prepare": "husky install",
        "commit": "cz",
        "cz": "cz"
    },
    "keywords": [
        "electron",
        "task-management",
        "collaboration"
    ],
    "author": "HXK Team",
    "license": "MIT",
    "packageManager": "pnpm@10.19.0",
    "devDependencies": {
        "@electron-forge/cli": "^7.10.2",
        "commitizen": "^4.3.1",
        "cspell": "^9.2.1",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^7.5.1",
        "electron": "^38.3.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.38.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.5",
        "prettier": "3.6.2"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.14.0",
        "@grpc/proto-loader": "^0.8.0",
        "electron-store": "^10.0.0",
        "eslint-plugin-jsdoc": "^61.1.5",
        "jsdoc": "^4.0.5"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "build": {
        "appId": "com.hxk.terminal",
        "productName": "HXK Terminal",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "assets/**/*",
            "build/icon/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "build/icon/icon.icns"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "build/icon/icon.ico",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "guid": "com.hxk.terminal",
            "warningsAsErrors": false,
            "artifactName": "${productName} Setup ${version}.${ext}",
            "runAfterFinish": true,
            "menuCategory": "HXK Team Tools",
            "shortcutName": "HXK Terminal",
            "deleteAppDataOnUninstall": false,
            "installerSidebar": "build/ui/sidebar.bmp",
            "installerHeader": "build/ui/header.bmp"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/icon/icon.png"
        }
    }
}

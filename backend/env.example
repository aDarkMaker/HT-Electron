# HXK Terminal Backend 环境配置

# 调试模式
DEBUG=true

# 安全密钥（生产环境请修改）
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:///./hxkt.db

# PostgreSQL (生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/hxkt_db

# MySQL (生产环境)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/hxkt_db

# JWT配置
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# Alist集成配置
ALIST_URL=http://localhost:5244
# ALIST_TOKEN=your-alist-token

# 日志配置
LOG_LEVEL=INFO
# LOG_FILE=./logs/app.log

# Redis配置（可选）
# REDIS_URL=redis://localhost:6379/0
